<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black0"
    android:orientation="vertical"
    tools:context=".MainActivity7"

    >
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@color/black0"
        android:orientation="vertical"
        tools:context=".MainActivity7"
        >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_launcher_foreground"
            android:fontFamily="cursive"
            android:gravity="center_vertical"
            android:text="MY PROFILE"
            android:textColor="@color/black"
            android:textSize="30dp"

            android:textStyle="bold" />


        <TextView
            android:id="@+id/textViewemail"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:drawableLeft="@drawable/ic_launcher_email"
            android:fontFamily="cursive"
            android:gravity="center_vertical"
            android:text="txtemail"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewphone"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:drawableLeft="@drawable/ic_launcher_phone"
            android:fontFamily="cursive"
            android:gravity="center_vertical"
            android:text="txtphone"
            android:textSize="30dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textVieweusername"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:drawableLeft="@drawable/ic_launcher_username"
            android:fontFamily="cursive"
            android:gravity="center_vertical"
            android:text="txtusername"
            android:textSize="30dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textViewpass"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:drawableLeft="@drawable/ic_launcher_pass"
            android:fontFamily="cursive"
            android:gravity="center_vertical"
            android:text="txtpassword"
            android:textSize="30dp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="location"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/hobies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="hobies"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/studys"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="studys"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/compleate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="casual"
            android:text="compleate your data "
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>
